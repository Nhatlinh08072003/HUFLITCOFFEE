<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Xử lý cho tăng giảm giá trị trong thẻ span và xóa sản phẩm
        const deleteButtons = document.querySelectorAll('.btn-dele');

        deleteButtons.forEach(button => {
            const parentElement = button.closest('.cart-pro-box');
            const counter = parentElement.querySelector('#cart-ct');
            const prevButton = parentElement.querySelector('.cart-pro-prevous');
            const nextButton = parentElement.querySelector('.cart-pro-next');

            prevButton.addEventListener('click', function () {
                let currentValue = parseInt(counter.textContent, 10);
                if (currentValue > 0) {
                    counter.textContent = currentValue - 1;
                }
            });

            nextButton.addEventListener('click', function () {
                let currentValue = parseInt(counter.textContent, 10);
                counter.textContent = currentValue + 1;
            });

            button.addEventListener('click', function () {
                parentElement.remove();
            });
        });

        // Thêm sự kiện cho nút "Xoá tất cả"
        const deleteAllButton = document.querySelector('.txt-delete');
        deleteAllButton.addEventListener('click', function () {
            const cartBoxes = document.querySelectorAll('.cart-pro-box');
            cartBoxes.forEach(box => box.remove());
        });
    });

</script>
